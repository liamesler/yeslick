//Kit

IF
    Global("MyKit","LOCALS",0)
    InParty(Myself)
THEN
  RESPONSE #100
    SetGlobal("MyKit","LOCALS",1)
    AddKit("LK#YK")
END


// Dialogues
IF
    InParty(Myself)
    Global("LK#YeslickFriendTalks","GLOBAL",0)
THEN
  RESPONSE #100
    RealSetGlobalTimer("LK#YeslickFriendTalksTimer","GLOBAL",3600)
    SetGlobal("LK#YeslickFriendTalks","GLOBAL",1)
END

/*
IF
    InParty(Myself)
